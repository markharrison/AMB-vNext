@page
@model ExpenseManagement.Web.Pages.Approvals.IndexModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="card">
    <div class="card-body">
        <h4 class="mb-4">Pending Expenses</h4>
        <p class="text-muted mb-4">Review and approve or reject submitted expenses.</p>

        <div class="row mb-4">
            <div class="col-md-4">
                <form method="get">
                    <div class="input-group">
                        <span class="input-group-text">Filter:</span>
                        <input type="text" class="form-control" name="filter" value="@Model.Filter" placeholder="Search..." />
                        <button type="submit" class="btn btn-outline-secondary">Search</button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.PendingExpenses.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Employee</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.PendingExpenses)
                        {
                            <tr>
                                <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                <td>@expense.UserName</td>
                                <td>@expense.CategoryName</td>
                                <td><strong>Â£@expense.Amount.ToString("N2")</strong></td>
                                <td>@expense.Description</td>
                                <td>@expense.SubmittedAt?.ToString("dd MMM yyyy")</td>
                                <td>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                        <button type="submit" asp-page-handler="Approve" class="btn btn-sm btn-success">Approve</button>
                                        <button type="submit" asp-page-handler="Reject" class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <strong>No pending expenses.</strong> All submitted expenses have been reviewed.
            </div>
        }
    </div>
</div>
