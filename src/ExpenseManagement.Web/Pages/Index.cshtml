@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Expense Dashboard</h4>
            <a asp-page="/Expenses/Create" class="btn btn-primary">
                + New Expense
            </a>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Total Expenses</div>
                    <div class="stat-value">@Model.Stats.TotalExpenses</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Pending Approvals</div>
                    <div class="stat-value">@Model.Stats.PendingApprovals</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Approved Amount</div>
                    <div class="stat-value">£@Model.Stats.ApprovedAmount.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Approved Count</div>
                    <div class="stat-value">@Model.Stats.ApprovedCount</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Recent Expenses</h5>
            <a asp-page="/Expenses/Index" class="btn btn-secondary btn-sm">View All</a>
        </div>
        
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.RecentExpenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                            <td>@expense.UserName</td>
                            <td>@expense.CategoryName</td>
                            <td>£@expense.Amount.ToString("N2")</td>
                            <td>
                                <span class="badge-status badge-@expense.StatusName?.ToLower()">
                                    @expense.StatusName?.ToUpper()
                                </span>
                            </td>
                            <td>@expense.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
